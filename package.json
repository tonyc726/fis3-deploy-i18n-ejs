{
  "name": "fis3-deploy-i18n-ejs",
  "version": "2.0.5",
  "description": "A fis3 plugin to generate intl file with i18n language file and template file on deploy stage.",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonyc726/fis3-deploy-i18n-ejs"
  },
  "keywords": [
    "fis3",
    "i18n",
    "language",
    "ejs"
  ],
  "author": "tony <zhujf620@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tonyc726/fis3-deploy-i18n-ejs/issues"
  },
  "homepage": "https://github.com/tonyc726/fis3-deploy-i18n-ejs",
  "engines": {
    "node": ">=6"
  },
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore **/__mock__,*.test.js src",
    "lint": "eslint ./src",
    "test": "cross-env NODE_ENV=test jest ./src",
    "semantic-release": "npx semantic-release"
  },
  "dependencies": {
    "ejs": "^2.5.7",
    "glob": "^7.1.2",
    "is-glob": "^4.0.0",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.2.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-lodash": "^3.3.4",
    "commitizen": "^4.0.3",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^22.10.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.1",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,less}": [
      "prettier --write",
      "git add"
    ]
  }
}
